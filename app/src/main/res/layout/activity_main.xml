<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jackiechans.recipeek.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <Button
        android:text="SignOut"
        android:layout_marginLeft="291dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:onClick="createSignInActivity" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:srcCompat="@drawable/recipeek_logo"
        android:id="@+id/imageView" />

    <Button
        android:text="Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button9" />

    <Button
        android:text="Teach"
        android:layout_width="match_parent"
        android:id="@+id/button4"
        android:layout_weight="0.11"
        android:layout_height="75dp"
        android:onClick="createUpdateMain"/>

    <Button
        android:text="My Recipes"
        android:layout_width="match_parent"
        android:id="@+id/button5"
        android:layout_weight="0.15"
        android:layout_height="75dp"
        android:onClick="createMyRecipeActivity"/>

    <Button
        android:text="Favorites"
        android:layout_width="match_parent"
        android:id="@+id/button6"
        android:layout_weight="0.08"
        android:layout_height="75dp"
        android:onClick="createFavouriteRecipeActivity"/>
</LinearLayout>
