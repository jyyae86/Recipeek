<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jackiechans.recipeek.Upload_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    app:srcCompat="@drawable/close_512"
                    android:id="@+id/imageView19"
                    android:onClick="backToMain"
                    />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="43dp"
                    app:srcCompat="@drawable/correct_128"
                    android:id="@+id/imageView17"
                    android:layout_weight="0.05"
                    android:onClick="createActivityDone" />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="419dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="46dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="input title" />

                <TextView
                    android:text="2.Thumbnail"
                    android:layout_width="155dp"
                    android:layout_height="31dp"
                    android:id="@+id/textView3"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <TextView
                    android:text="1.Title"
                    android:layout_width="155dp"
                    android:layout_height="33dp"
                    android:id="@+id/textView2"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <TextView
                    android:text="4.Step"
                    android:layout_width="153dp"
                    android:layout_height="41dp"
                    android:id="@+id/textView8"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <TextView
                    android:text="Add new recipe"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:id="@+id/textView"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:layout_row="0"
                    android:layout_column="0" />

                <TextView
                    android:text="3.Ingredient"
                    android:layout_width="154dp"
                    android:layout_height="36dp"
                    android:id="@+id/textView4"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="74dp"
                    app:srcCompat="@drawable/unnamed"
                    android:id="@+id/imageView5"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_height="53dp" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="53dp"
                    app:srcCompat="@drawable/unnamed"
                    android:id="@+id/imageView"
                    android:layout_row="7"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:textColor="@android:color/black"
                    android:hint="Add ingredients" />

                <EditText
                    android:layout_width="114dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:hint="Total mins "
                    android:layout_height="80dp" />

            </GridLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
