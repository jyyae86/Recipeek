<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jackiechans.recipeek.Upload_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="43dp"
                app:srcCompat="@drawable/close_512"
                android:id="@+id/imageView19"
                android:onClick="backToMain"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.97" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="43dp"
                app:srcCompat="@drawable/correct_128"
                android:id="@+id/imageView17"
                android:layout_weight="0.05"
                android:onClick="createActivityDone" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="53dp">

                        <TextView
                            android:text="Add recipe"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView6"
                            android:textColor="@android:color/black"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:weightSum="1">

                        <TextView
                            android:text="1.Title:"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView7"
                            android:layout_weight="1.11"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/titleEditText"
                            android:hint="Add your title"
                            tools:gravity="top" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:weightSum="1">

                        <TextView
                            android:text="2.Thumbnail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView8"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="86dp"
                            app:srcCompat="@drawable/unnamed"
                            android:id="@+id/imageView5"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_height="match_parent"
                            android:onClick="OpenCamera" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:weightSum="1">

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category"
                            android:layout_weight="0.80"
                            />

                        <Spinner
                            android:layout_width="155dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/type"
                            android:layout_weight="0.09" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="5.Ingredient:"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView9"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingredientContainer">

                    </LinearLayout>

                    <Button
                        android:text="More"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/more_ingredient_button"
                        android:onClick="MoreIngredient"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="68dp">

                        <TextView
                            android:text="6.Time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView10"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.39" />

                        <EditText
                            android:layout_width="149dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:id="@+id/TimeEditText"
                            android:hint="Cooking time"
                            tools:gravity="top" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="7.Add steps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView11"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/steps_container"></LinearLayout>

                <Button
                    android:text="MORE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/more_step"
                    android:onClick="moreStep"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
